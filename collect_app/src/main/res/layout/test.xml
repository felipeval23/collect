<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.Collect.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"/>

    </com.google.android.material.appbar.AppBarLayout> -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mapPointFill"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/storage_migration_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="593dp"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_standard"
                android:paddingTop="@dimen/margin_small"
                android:paddingRight="@dimen/margin_standard"
                android:paddingBottom="@dimen/margin_small">

                <LinearLayout
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="665dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="130dp"
                        android:layout_height="155dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="HEDERA Collect"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.Collect.Body2.MediumEmphasis"
                        android:textColor="#121111"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:visibility="visible" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/survey_data"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="289dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_extra_small"
                        android:backgroundTint="#FFFFFF"
                        android:fontFamily="@font/tw_cent"
                        android:onClick="testx"
                        android:textAlignment="viewStart"
                        android:textColor="@color/light_theme_tint_list"
                        android:textSize="22sp"
                        app:icon="@drawable/ic_action_paste"
                        app:iconGravity="start"
                        app:iconPadding="@dimen/margin_standard"
                        tools:text="@string/enter_survey" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tuto_data"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_extra_small"
                        android:backgroundTint="#FFFFFF"
                        android:fontFamily="@font/tw_cent"
                        android:onClick="tutor"
                        android:text="Virtual Assistant"
                        android:textAlignment="viewStart"
                        android:textColor="@color/light_theme_tint_list"
                        android:textSize="22sp"
                        app:icon="@drawable/ic_action_about"
                        app:iconGravity="start"
                        tools:text="@string/enter_tutorial" />

                    <TextView
                        android:id="@+id/version_sha"
                        style="@style/TextAppearance.Collect.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:textColorHint="#939393"
                        tools:text="version debug" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>